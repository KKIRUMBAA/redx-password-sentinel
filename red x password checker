import string

def check_strength(password):
    score = 0
    feedback = []

    # Length check
    if len(password) >= 8:
        score += 1
    else:
        feedback.append("Too short (min 8 characters)")

    # Uppercase
    if any(c.isupper() for c in password):
        score += 1
    else:
        feedback.append("Add uppercase letters")

    # Lowercase
    if any(c.islower() for c in password):
        score += 1
    else:
        feedback.append("Add lowercase letters")

    # Digits
    if any(c.isdigit() for c in password):
        score += 1
    else:
        feedback.append("Add numbers")

    # Symbols
    if any(c in string.punctuation for c in password):
        score += 1
    else:
        feedback.append("Add symbols (!, @, #, etc.)")

    return score, feedback

# === RedX Sentinel ===
print("=== RED X | PASSWORD SENTINEL ===")
user_input = input("Enter a password to test: ")

score, problems = check_strength(user_input)

print(f"\nScore: {score}/5")

if score == 5:
    print("üîí Strong password. Fortress level.")
else:
    print("‚ö†Ô∏è Weak points:")
    for issue in problems:
        print(f" - {issue}")
print("===============================")